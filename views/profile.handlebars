<div class="row">
    <!-- left column -->
    <div class="col g-6">
        <figure class="ratio ratio-1x1 overflow-x-hidden">

            <img class="img-thumbnail mx-auto  d-block rounded-circle" src="{{userData.photoUrl}}"
                alt="profile picture">

        </figure>
    </div>

    <!-- right column -->
    <div class="w-50 p-3">
        <div class="card m-6 text-center" style="background-color:#BEB4AA; height:100%; align-items:center;">
            <div class="card-body position-absolute top-50 start-50 translate-middle">


                {{!-- <div class="card-header">Log In</div> --}}
                <h1 class="card-title">{{userData.firstName}}'s profile</h1>

                <p class="card-text">
                <h3>Interests</h3>
                {{!-- {{#each userData}} --}}
                <ul>
                    {{#each userData.interests}}
                    <li>{{interest}}</li>
                    {{/each}}
                    {{!-- {{/each}} --}}
                </ul>

                <h3>Bio</h3>
                {{userData.biography}}</p>


                <a href="/chat">

                    <button class="btn btn-outline-light" type="button" style="width:300px; height:50px;">
                        Start Chatting
                        <img src="/Assets/chat bubble icon.png" style="height: 40px; width:auto">
                    </button>
                </a>
            </div>
        </div>


    </div>
    <hr>
</div>




</div>
</div>


